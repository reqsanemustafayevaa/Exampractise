@model List<Doctor>
@{
    var counter = 0;
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create</h1>
        <a asp-action="create" asp-controller="doctor" class="btn btn-primary">Create</a>
    </div>
   
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Position</th>
                <th scope="col">Image</th>
                <th scope="col">No</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@doctor.Name</td>
                    <td>@doctor.Position</td>
                    <td><img src="~/uploads/doctors/@doctor.ImageUrl" style="max-width:120px" /></td>
                    <td>
                        <a asp-action="update" asp-controller="doctor" asp-route-id="@doctor.Id" class="btn btn-warning">update</a>
                        <a asp-action="delete" asp-controller="doctor" asp-route-id="@doctor.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
